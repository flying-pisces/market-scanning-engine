# Market Scanning Engine Configuration
# Copy this to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production-please
ALLOWED_HOSTS=["*"]

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/market_scanner

# Risk Scoring
RISK_SCORE_PRECISION=2
DEFAULT_CONFIDENCE_THRESHOLD=0.6
MAX_SIGNALS_PER_REQUEST=100

# Signal Generation
MAX_PROCESSING_TIME_SECONDS=30
ENABLE_SIGNAL_CACHING=true
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=INFO